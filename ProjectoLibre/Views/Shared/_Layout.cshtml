<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="~/favicon.ico" rel="icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Gotham City Project</title>
    <!-- Bootstrap Core CSS -->
    @*@Styles.Render("~/Content/themes/base/css")*@
    @Styles.Render("~/Content/themes/base/css")    
    @Styles.Render("~/Content/general.css")
    @Styles.Render("~/Content/small-business.css")   
    @Styles.Render("~/Content/bootstrap/bootstrap.min.css")

    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/Scripts/jquery-ui.min.js")*@
    @Scripts.Render("~/bundles/jqueryui")
    <!-- Bootstrap Core JavaScript -->
    @Scripts.Render("~/Scripts/bootstrap/bootstrap.min.js")    
    @Scripts.Render("~/Scripts/scrollButtons.js")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->    

</head>
<body class="backimage">
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Portada", "Gotham")">
                    <img src="../../Images/logo.png" alt="logo_principal" width="125" height="40" title="Batman HomePage">
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="trebuchet">
                        @Html.ActionLink(HttpUtility.HtmlDecode("&raquo; ") + "Inicio", "Portada", "Gotham")
                    </li>
                    <li class="trebuchet">
                        @Html.ActionLink(HttpUtility.HtmlDecode("&raquo; ") + "Pestañas", "Tabs", "Gotham")
                    </li>
                    <li class="trebuchet">
                        @Html.ActionLink(HttpUtility.HtmlDecode("&raquo; ") + "Contacto", "Contacto", "Gotham")
                    </li>
                    <li class="trebuchet">
                        @Html.ActionLink(HttpUtility.HtmlDecode("&raquo; ") + "Trailer", "Trailer", "Gotham")
                    </li>
                </ul>
                @Html.Partial("~/Views/Gotham/Buscador.cshtml", new ProjectoLibre.Models.Buscador())


            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <div id="scrollButtonUp">
        <button class="btn-sm btn-default" onclick="scrollToTop();"><span class="glyphicon glyphicon-arrow-up"></span></button>
    </div>
    <!-- Page Content -->
    <div class="container">
        @RenderBody()

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <hr />
                    <p>
                        Copyright &copy; @DateTime.Now.Year Batman Enterprises
                        <span class="sidebox sidebox-social">
                            <a class="sm-rss" href="http://feeds.feedburner.com/Crunchify" rel="external" target="_blank" title="Subscribirse">RSS Feed</a>
                            <a class="sm-goo" href="https://plus.google.com/u/0/" rel="publisher" target="_blank" title="Perfil de Google+">Google+</a>
                            <a class="sm-fac" href="https://www.facebook.com/" target="_blank" title="Perfil de Facebook">Facebook</a>
                            <a class="sm-twi" href="http://twitter.com" target="_blank" title="Perfil de Twitter">Twitter</a>
                            <a class="sm-wor" href="http://profiles.wordpress.org/crunchify/" target="_blank" title="Perfil de WordPress">WordPress.org</a>
                            <span class="text-right pull-right"> Seguínos en: </span>
                        </span>
                    </p>
                </div>
            </div>
        </footer>
    </div>
    <!-- /.container -->

    <div id="scrollButtonDown">
        <button class="btn-sm btn-default" onclick="scrollToDown();"><span class="glyphicon glyphicon-arrow-down"></span></button>
    </div>
</body>
</html>

