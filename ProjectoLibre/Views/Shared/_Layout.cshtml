<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="~/favicon.ico" rel="icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Gotham City Project</title>
    <!-- Bootstrap Core CSS -->
    @Styles.Render("~/Content/bootstrap/bootstrap.min.css")
    <!-- jQuery -->
    @Scripts.Render("~/Scripts/jquery-1.11.3.min.js")
    <!-- Bootstrap Core JavaScript -->
    @Scripts.Render("~/Scripts/bootstrap/bootstrap.min.js")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/scrollButtons.js")

    @Styles.Render("~/Content/small-business.css")
    @Styles.Render("~/Content/general.css")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/jqueryui/jquery.ui.1.9.2.ie.css")

    @*<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">*@
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>*@
