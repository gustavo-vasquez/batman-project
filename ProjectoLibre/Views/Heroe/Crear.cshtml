@model ProjectoLibre.Models.Heroe

@*@using (Html.BeginForm(null, null, FormMethod.Post, new {enctype = "multipart/form-data" }))*@
@Scripts.Render("~/Scripts/ajaxFormFix.js")
@Scripts.Render("~/Scripts/fileStyle/bootstrap-filestyle.min.js")

<style>
    .btn-file {
        position: relative;
        overflow: hidden;
    }

        .btn-file input[type=file] {
            position: absolute;
            top: 0;
            right: 0;
            min-width: 100%;
            min-height: 100%;
            font-size: 100px;
            text-align: right;
            filter: alpha(opacity=0);
            opacity: 0;
            outline: none;
            background: white;
            cursor: inherit;
            display: block;
        }
</style>

@using (Ajax.BeginForm("Crear", "Heroe", null, new AjaxOptions() { UpdateTargetId = "DivHeroe", HttpMethod = "POST" }, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary(true)*@

    <fieldset class="col-lg-7">
        <legend>Heroe</legend>

        <div class="form-group">
            <label class="control-label col-sm-2" for="nombre">Nombre:</label>

            <div class="col-sm-7">
                @Html.TextBoxFor(h => h.nombre,
                new { 
                    @class="form-control",
                    placeholder = "Ingrese nombre..."
                })

                @Html.ValidationMessageFor(h => h.nombre, null, new { @class = "validations" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="habilidad">Habilidad:</label>

            <div class="col-sm-7">
                @Html.TextBoxFor(h => h.habilidad,
                new { 
                    @class = "form-control",
                    placeholder = "Ingrese habilidad..."
                })

                @Html.ValidationMessageFor(h => h.habilidad, null, new { @class = "validations" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Avatar del personaje:</label>

            <div class="col-sm-7">
                @Html.TextBoxFor(h => h.file, 
                new { 
                    type = "file",
                    @class = "filestyle", 
                    data_buttonname="btn-primary", 
                    data_placeholder="No hay archivo", 
                    data_buttonbefore="true"
                })

                @Html.ValidationMessageFor(h => h.file, null, new { @class = "validations" })                
            </div>
        </div>

        <div class="vert"></div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Crear personaje</button>
                <button type="button" class="btn btn-danger" onclick="document.location = '@Url.Action("Portada", "Gotham")';">Cancelar</button>
            </div>                            
        </div>

</fieldset>
}

<input type="hidden" value="@ViewBag.submitSuccess" id="checkedForm" />

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" onclick="document.location = '@Url.Action("Portada", "Gotham")';">&times;</button>
                    <h4 class="modal-title">Operación exitosa <span class="glyphicon glyphicon-ok-circle"></span></h4>
                </div>
                <div class="modal-body">
                    <p>El personaje se ha creado correctamente.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="document.location = '@Url.Action("Portada", "Gotham")';">Cerrar</button>
                </div>
            </div>

        </div>
    </div>
</div>